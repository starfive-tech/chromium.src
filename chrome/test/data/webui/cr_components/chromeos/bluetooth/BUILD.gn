  deps = [
    ":bluetooth_base_page_test",
    ":bluetooth_battery_icon_percentage_tests",
    ":bluetooth_device_battery_info_tests",
    ":bluetooth_icon_test",
    ":bluetooth_pairing_confirm_code_page_test",
